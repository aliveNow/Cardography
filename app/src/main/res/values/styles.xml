<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="materialCardViewStyle">@style/AppTheme.Card</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="AppThemeOverlay.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark">
    </style>

    <style name="CircularProgressButton" parent="Widget.AppCompat.Button.Colored">
        <item name="finalCornerAngle">@dimen/button_final_corner_angle</item>
        <item name="initialCornerAngle">@dimen/button_initial_corner_angle</item>
        <item name="spinning_bar_color">@color/button_spinning_bar_color</item>
        <item name="spinning_bar_padding">@dimen/button_spinning_bar_padding</item>
        <item name="spinning_bar_width">@dimen/button_spinning_bar_width</item>
    </style>

</resources>
